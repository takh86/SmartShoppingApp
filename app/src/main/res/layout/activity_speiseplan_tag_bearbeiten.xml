<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Kopfbereich mit Titel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/pageTitle"
            style="@style/StandardTitel"
            android:text="Speiseplan erstellen" />
    </LinearLayout>

    <!-- Trennlinie -->
    <View style="@style/StandardTrennlinie" />

    <!-- Grauer Hintergrundbereich beginnt hier -->
    <ScrollView
        android:id="@+id/artikelScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/bg_gray">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Suchfeld (unsichtbar) -->
            <LinearLayout
                android:id="@+id/searchSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <AutoCompleteTextView
                    android:id="@+id/editRezeptSuche"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Rezept suchen..."
                    android:completionThreshold="1"
                    android:inputType="text" />
            </LinearLayout>


            <!-- Spinners -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vorspeise" android:textStyle="bold" android:paddingTop="16dp"/>
            <Spinner android:id="@+id/spinnerVorspeise" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hauptspeise" android:textStyle="bold" android:paddingTop="12dp"/>
            <Spinner android:id="@+id/spinnerHauptspeise" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Beilage 1" android:textStyle="bold" android:paddingTop="12dp"/>
            <Spinner android:id="@+id/spinnerBeilage1" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Beilage 2" android:textStyle="bold" android:paddingTop="12dp"/>
            <Spinner android:id="@+id/spinnerBeilage2" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nachspeise" android:textStyle="bold" android:paddingTop="12dp"/>
            <Spinner android:id="@+id/spinnerNachspeise" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <!-- Speichern-Button am unteren Rand -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:padding="24dp">

        <Button
            android:id="@+id/btnSpeichern"
            style="@style/StandardButton"
            android:text="Speichern" />
    </LinearLayout>

</LinearLayout>
